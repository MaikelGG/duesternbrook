.contact-modal
  .contact-modal-container
    
    a.close-form(href='#0') Close form
  
    h2 Request
    
    form.form(action='#', method='POST')
    
      p Wir freuen uns auf Ihre Anfrage und werden uns schnellstmöglich mit Ihnen in Verbindung setzen.
      
      .form-item
        label.form-label Ankunft
        input.form-text.js-date-picker.date(type='date', placeholder='Wählen sie ein Datum', value='', name='arrival' required)
      
      .form-item
        label.form-label Abreise
        input.form-text.js-date-picker.date(type='date', placeholder='Wählen sie ein Datum', value='', name='departure', required)
    
      .form-item
        label.form-label Essen
        .form-radios
          .form-type-radio
            input#meals-1.form-radio(type='radio', name='meals', value='Bed and breakfast', checked)
            label.option(for='meals-1') Bed and breakfast
          .form-type-radio
            input#meals-2.form-radio(type='radio', name='meals', value='Dinner, Bed and breakfast')
            label.option(for='meals-2') Abendessen und Frühstuck
          if page == 'Safari Zelte' || page == 'Camping' || page == 'Chalets' || page == 'Damahaus'
            .form-type-radio
              input#meals-3.form-radio(type='radio', name='meals', value='Self-catering')
              label.option(for='meals-3') Selbstversorgung
    
      .form-item
        label.form-label Erwachsene
        .form-select
          select(name='adults').adults
            option(value='') 
            option(value='1') 1
            option(value='2', selected='selected') 2
            option(value='3') 3
            option(value='4') 4
            option(value='5') 5
            option(value='6') 6
      .form-item
          label.form-label Kinder (0-12 years)
          .form-select
            select(name='children').children
              option(value='')
              option(value='0', selected='selected') 0 
              option(value='1') 1
              option(value='2') 2
              option(value='3') 3
              option(value='4') 4
              option(value='5') 5
              option(value='6') 6
            
      .form-item
        label.form-label Anrede
        .form-radios
          .form-type-radio
            input#gender-1.form-radio(type='radio', name='gender', value='Herr', checked)
            label.option(for='gender-1') Herr
          .form-type-radio
            input#gender-2.form-radio(type='radio', name='gender', value='Frau')
            label.option(for='gender-2') Frau
      
      .form-item
        label.form-label Name
        input.form-text.name(type='text', value='', name='name', required)
        
      .form-item
        label.form-label E-mail
        input.form-text.email(type='email', value='', name='_replyto', required)
        
      .form-item
        label.form-label Telefon
        input.form-text.phone(type='number', value='', name='phone', required)
    
      .form-item
        label.form-label Besondere Wünsche?
        textarea.form-text.message(name='requests', rows='5', cols='20')
        
      .form-item
        input(type='hidden', name='_subject', value='Reservation')
        input(type='hidden', name='language', value='German')
        input.gotcha(type='text', name='_gotcha')
        input.form-submit(type="submit" value='Anfrage Senden')
