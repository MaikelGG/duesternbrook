style(type='text/css').
    .loading-img,
    .loaded-img {
        position: absolute;
        background-repeat: no-repeat;
        width: 100%;
        height: 100%;
        background-color: #94B6E0;
        background-size: cover;
        background-position: 50% 20px;
    }

    @media only screen and (min-width:45em) {
        .loading-img,
        .loaded-img {
            background-position: 50% 0;
        }
    }

    @media only screen and (min-width:60em) {
        .loading-img,
        .loaded-img {
            background-position: 50% -100px;
        }
    }

    .loading-img {
        background-image: url('data:image/jpeg;base64,');
        filter: blur(20px);
    }

    .loaded-img {
        opacity: 0;
    }

    .intro-scene-enhanced .loaded-img {
        background-image: url('/images/hero-home.jpg');
    }

    @media only screen and (-webkit-min-device-pixel-ratio:2),only screen and (min-resolution:2dppx),only screen and (min-resolution:192dpi),screen and (-webkit-min-device-pixel-ratio:2){
        .intro-scene-enhanced .loaded-img {
            background-image: url('/images/hero-home@2x.jpg');
        }
    }

    @media only screen and (min-width:45em) {
        .intro-scene-enhanced .loaded-img {
            background-image: url('/images/hero-home-tab.jpg');
        }
    }

    @media only screen and (min-width:45em) and (-webkit-min-device-pixel-ratio:2),only screen and (min-width:45em) and (min-resolution:2dppx),only screen and (min-width:45em) and (min-resolution:192dpi),screen and (min-width:45em) and (-webkit-min-device-pixel-ratio:2) {
        .intro-scene-enhanced .loaded-img {
            background-image: url('/images/hero-home-tab@2x.jpg');
        }
    }

    @media only screen and (min-width:60em) {                             .intro-scene-enhanced .loaded-img {
        background-image: url('../images/hero-home-desk.jpg');
    }
    }

    @media only screen and (min-width:60em) and (-webkit-min-device-pixel-ratio:2),only screen and (min-width:60em) and (min-resolution:2dppx),only screen and (min-width:60em) and (min-resolution:192dpi),screen and (min-width:60em) and (-webkit-min-device-pixel-ratio:2) {
        .intro-scene-enhanced .loaded-img {
            background-image: url('../images/hero-home-desk@2x.jpg');
        }
    }